# Maintainer: Ricardo Wurmus <maintainer name + @gmail.com>
pkgname=soundcli
pkgver=0.0.2
pkgrel=1
pkgdesc="Command line interface to stream/download songs from soundcloud.com"
url="http://soundcli.elephly.net"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('ruby' 'gstreamer0.10' 'gstreamer0.10-base' 'gstreamer0.10-good' 'ruby-gstreamer' 'ruby-curb' 'ruby-json')
makedepends=(rubygems)
source=(http://rubygems.org/downloads/$pkgname-$pkgver.gem)
md5sums=('f108d2d5df14653c0e5829d978ea1af9')

build() {
  cd $srcdir
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --ignore-dependencies --verbose -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $pkgname-$pkgver.gem
}
